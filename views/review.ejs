<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" >
  <title>Submit a Review</title>
</head>
<body>
  <div class="review-form">
    <div>
    <form method="POST" action="/reviews">
      <label for="shift">Shift:</label>
      <div class="options-div">
        <input type="checkbox" id="shiftType" value="5/8">5/8 hour shifts</input>
        <input type="checkbox" id="shiftType" value="3/12">3/12 hour shifts</input>
        <input type="checkbox" id="shiftType" value="4/10">4/10 hour shifts</input>
      </div>
    </div>
    <div class="options-div">
      <label for="specialty">Specialty:</label>
      <select id="specialty" name="specialty">
        <option value="Medsurg">Medsurg</option>
        <option value="Emergency">Emergency</option>
      </select>
    </div>
    <div class="options-div">
      <label for="nurseRatio">Nurse Ratio:</label>
      <input type="checkbox" id="nurseRatio" value="1:3">1:3 patients</input>
      <input type="checkbox" id="nurseRatio" value="1:5">1:5 patients</input>
      <input type="checkbox" id="nurseRatio" value="1:7">1:7 patients</input>
     
    </div>
    <div class="options-div">
      <label for="text">Text:</label>
      <textarea id="text" name="text"></textarea>
    </div>
    <div class="options-div">
      <label for="chartingSoftware">Charting Software:</label>
      <select id="specialty" name="specialty">
        <option value="Meditech">Meditech</option>
        <option value="Epic">EPIC</option>
      </select>
    </div class="options-div">
    <label for="accessibility">Accessibility:</label>
    <div class="radio-style">
      <input type="radio" id="option1" name="options" value="option1">
      <label for="option1">1</label>
      <input type="radio" id="option2" name="options" value="option2">
        <label for="option2">2</label>
        <input type="radio" id="option3" name="options" value="option3">
        <label for="option3">3</label>
        <input type="radio" id="option4" name="options" value="option4">
        <label for="option4">4</label>
        <input type="radio" id="option5" name="options" value="option5">
        <label for="option5">5</label>
        <input type="radio" id="option6" name="options" value="option6">
        <label for="option6">6</label>
        <input type="radio" id="option7" name="options" value="option7">
        <label for="option7">7</label>
        <input type="radio" id="option8" name="options" value="option8">
        <label for="option8">8</label>
        <input type="radio" id="option9" name="options" value="option9">
        <label for="option9">9</label>
        <input type="radio" id="option10" name="options" value="option3">
        <label for="option10">10</label>
      </div>
    <div class="options-div">
      <label for="dinning">Dining:</label>
      <input
        type="checkbox"
        id="dinningCafeteria"
        name="dinning"
        value="on-site cafeteria"
      />
      <label for="dinningCafeteria">On-site Cafeteria</label>
      <input
        type="checkbox"
        id="dinningCoffee"
        name="dinning"
        value="coffee-shop"
      />
      <label for="dinningCoffee">Coffee Shop</label>
      <input
        type="checkbox"
        id="dinningVending"
        name="dinning"
        value="vending machines"
      />
      <label for="dinningVending">Vending Machines</label>
    </div>
      <label for="scrubColor">Scrub Color:</label>
      <input type="text" id="scrubColor" name="scrubColor" />
    <div>
      <label for="housing">Housing:</label>
      <input type="checkbox" id="housingHotel" name="housing" value="Hotel" />
      <label for="housingHotel">Hotel</label>
      <input type="checkbox" id="housingAirBnB" name="housing" value="AirBnB" />
      <label for="housingAirBnB">AirBnB</label>
    </div>
    <div>
      <label for="safety">Safety:</label>
      <div class="radio-style">
        <input type="radio" id="option1" name="options" value="option1">
        <label for="option1">1</label>
        <input type="radio" id="option2" name="options" value="option2">
          <label for="option2">2</label>
          <input type="radio" id="option3" name="options" value="option3">
          <label for="option3">3</label>
          <input type="radio" id="option4" name="options" value="option4">
          <label for="option4">4</label>
          <input type="radio" id="option5" name="options" value="option5">
          <label for="option5">5</label>
          <input type="radio" id="option6" name="options" value="option6">
          <label for="option6">6</label>
          <input type="radio" id="option7" name="options" value="option7">
          <label for="option7">7</label>
          <input type="radio" id="option8" name="options" value="option8">
          <label for="option8">8</label>
          <input type="radio" id="option9" name="options" value="option9">
          <label for="option9">9</label>
          <input type="radio" id="option10" name="options" value="option3">
          <label for="option10">10</label>
        </div>
    </div>
    <div class="options-div">
      <label for="parking">Parking:</label>
      <input type="radio" id="option1" name="options" value="option1">
      <label for="option1">1</label>
      <input type="radio" id="option2" name="options" value="option2">
        <label for="option2">2</label>
        <input type="radio" id="option3" name="options" value="option3">
        <label for="option3">3</label>
        <input type="radio" id="option4" name="options" value="option4">
        <label for="option4">4</label>
      </div>
      <div class="radio-style">
        <label for="overallScore">Overall Score:</label>
        <input type="radio" id="option1" name="options" value="option1">
        <label for="option1">1</label>
        <input type="radio" id="option2" name="options" value="option2">
          <label for="option2">2</label>
          <input type="radio" id="option3" name="options" value="option3">
          <label for="option3">3</label>
          <input type="radio" id="option4" name="options" value="option4">
          <label for="option4">4</label>
          <input type="radio" id="option5" name="options" value="option5">
          <label for="option5">5</label>
